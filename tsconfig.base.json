{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@lihim/auth/core": ["libs/auth/core/src/index.ts"],
      "@lihim/auth/data-access": ["libs/auth/data-access/src/index.ts"],
      "@lihim/auth/testutils": ["libs/auth/testutils/src/index.ts"],
      "@lihim/shared/core": ["libs/shared/core/src/index.ts"],
      "@lihim/shared/data-access": ["libs/shared/data-access/src/index.ts"],
      "@lihim/shared/mantine": ["libs/shared/mantine/src/index.ts"],
      "@lihim/shared/testutils/ui": ["libs/shared/testutils/ui/src/index.ts"],
      "@lihim/shared/ui/test-button": [
        "libs/shared/ui/test-button/src/index.ts"
      ],
      "@lihim/shared/utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
